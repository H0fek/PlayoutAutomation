<ResourceDictionary Source="/TAS.Client.Common;component/DataTemplates.xaml"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             
             xmlns:configurator="clr-namespace:TAS.Database.MySqlRedundant.Configurator">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type configurator:ConfiguratorViewModel}">
                <configurator:ConfiguratorView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type configurator:ConnectionStringViewmodel}">
                <configurator:ConnectionStringView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type configurator:CreateDatabaseViewmodel}">
                <configurator:CreateDatabaseView />
            </DataTemplate>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>

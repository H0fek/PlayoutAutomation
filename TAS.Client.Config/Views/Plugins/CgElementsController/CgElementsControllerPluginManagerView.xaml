<UserControl x:Class="TAS.Client.Config.Views.Plugins.CgElementsController.CgElementsControllerPluginManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:cgVM="clr-namespace:TAS.Client.Config.ViewModels.Plugins.CgElementsController"
             xmlns:cgView="clr-namespace:TAS.Client.Config.Views.Plugins.CgElementsController"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type cgVM:CgElementsControllerViewModel}">
            <cgView:CgElementsControllerView />
        </DataTemplate>
    </UserControl.Resources>

    <Grid Margin="10" Grid.Column="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Label Content="Engine: " />
            <ComboBox ItemsSource="{Binding Engines}" DisplayMemberPath="EngineName" SelectedItem="{Binding SelectedEngine}" MinWidth="150" />
        </StackPanel>
        <ContentControl Grid.Row="1" Content="{Binding CgElementsControllerVm}" />
    </Grid>
</UserControl>
